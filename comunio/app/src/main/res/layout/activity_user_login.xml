<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_vertical"
    tools:context="com.comunio.grupo8.comunio.UserLoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca su nombre de usuario y contraseña"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:id="@+id/textView7"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/userLoginNick"
        android:layout_alignBottom="@+id/userLoginNick"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:ems="10"
        android:id="@+id/userLoginNick"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contraseña:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:id="@+id/textView8"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/userLoginPassword"
        android:layout_alignBottom="@+id/userLoginPassword"
        android:layout_toLeftOf="@+id/userLoginPassword"
        android:layout_toStartOf="@+id/userLoginPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/userLoginPassword"
        android:layout_below="@+id/userLoginNick"
        android:layout_alignLeft="@+id/accesButton"
        android:layout_alignStart="@+id/accesButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/accesButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
