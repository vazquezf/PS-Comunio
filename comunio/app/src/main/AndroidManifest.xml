<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comunio.grupo8.comunio" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MenuStartedActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.menuUsuario.comunio.UserMenuActivity"
            android:label="@string/title_player_menu"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.menuUsuario.comunio.NewsActivity"
            android:label="@string/title_section1"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
